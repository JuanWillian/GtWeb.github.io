<section id="produtoFormContainer">
  <div class="mainFormContainer">
    <h1 class="text-center">Produto</h1>
    <p class="text-center lead">Gerencie os Produtos em estoque abaixo</p>
    <div class="cabecalhoForm">
      <button
        class="btn btnCadastro"
        onclick="return registrarNovoProdutoClick()"
        title="Adicionar novo Produto"
      >
        <i class="bi bi-plus-lg"></i>
      </button>
        <select
          id="registrosPorPag"
          class="formSelectGradient"
          onchange="atualizarRegistrosPorPag('produto')"
        >
          <option value="5">5</option>
          <option value="10" selected>10</option>
          <option value="20">20</option>
          <option value="50">50</option>
        </select>
    </div>
    <div
      class="table-responsive"
      style="max-height: 400px !important; overflow-y: scroll !important"
    >
      <table
        class="table table-striped table-bordered"
        style="margin-bottom: 0px !important"
      >
        <thead>
          <tr>
            <th>Marca</th>
            <th>Subgrupo</th>
            <th>Nome</th>
            <th>Descrição</th>
            <th>UniMed</th>
            <th>Qtd Estoque</th>
            <th>Valor</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody class="table-group-divider">
          <!-- Os dados dos produtos serão preenchidos aqui -->
        </tbody>
      </table>
    </div>
    <nav aria-label="footer Navbar" class="footerNav">
      <ul class="pagination ">
      </ul>
    </nav>
  </div>
</section>
