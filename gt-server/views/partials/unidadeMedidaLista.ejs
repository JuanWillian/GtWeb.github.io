<section id="unidadeMedidaFormContainer">
  <div class="mainFormContainer">
    <h1 class="text-center">Unidades de medida</h1>
    <p class="text-center lead">Gerencie as Unidades de medida abaixo</p>
    <div class="cabecalhoForm">
      <button
        class="btn btnCadastro"
        onclick="return registrarNovaUnidadeMedidaClick()"
        title="Adicionar nova unidade de medida"
      >
        <i class="bi bi-plus-lg"></i>
      </button>
      <select
        id="registrosPorPag"
        class="formSelectGradient"
        onchange="atualizarRegistrosPorPag('unidadeMedida')"
      >
        <option value="5">5</option>
        <option value="10" selected>10</option>
        <option value="20">20</option>
        <option value="50">50</option>
      </select>
    </div>
    <div
      class="table-responsive"
      style="max-height: 400px !important; overflow-y: scroll !important"
    >
      <table
        class="table table-striped table-bordered"
        style="margin-bottom: 0px !important"
      >
        <thead>
          <tr>
            <th>Descrição</th>
            <th>Sigla</th>
            <th>Pode Fracionar</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody class="table-group-divider">
          <!-- Os dados das unidades de medidas serão preenchidos aqui -->
        </tbody>
      </table>
    </div>
    <nav aria-label="footer Navbar" class="footerNav">
      <ul class="pagination"></ul>
    </nav>
  </div>
</section>
