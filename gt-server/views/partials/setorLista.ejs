<section id="setorFormContainer">
  <div class="mainFormContainer">
    <h1 class="text-center">Setores</h1>
    <p class="text-center lead">Gerencie seus setores abaixo.</p>
    <div class="cabecalhoForm">
      <button
        class="btn btnCadastro"
        onclick="return botaoListaSetorNovoClick()"
        title="Adicionar novo setor"
      >
        <i class="bi bi-plus-lg"></i>
      </button>
      <select
        id="recordsPerPage"
        class="form-select formSelectGradient"
        style="width: auto;"
        onchange="recordsPerPageChange()"
      >
        <option value="5">5</option>
        <option value="10" selected>10</option>
        <option value="20">20</option>
        <option value="50">50</option>
      </select>
    </div>
    <div
      class="table-responsive"
      style="max-height: 400px !important; overflow-y: scroll !important"
    >
      <table
        class="table table-striped table-bordered"
        style="margin-bottom: 0px !important"
      >
        <thead>
          <tr>
            <th>Nome</th>
            <th>Descrição</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody class="table-group-divider">
          <!-- Os dados dos setores serão preenchidos aqui -->
        </tbody>
      </table>
    </div>
    <nav aria-label="Page navigation example">
      <ul class="pagination">
        <!-- Navegação de páginas será preenchida aqui -->
      </ul>
    </nav>
  </div>
</section>
