<section id="usuarioFormContainer">
  <div class="mainFormContainer">
    <h1 class="text-center">Usuários</h1>
    <p class="text-center lead">Gerencie os usuários abaixo</p>
    <div class="cabecalhoForm">
      <button
        class="btn btnCadastro"
        onclick="return registrarNovoUsuarioClick()"
        title="Adicionar novo usuário"
      >
        <i class="bi bi-plus-lg"></i>
      </button>
      <select
        id="registrosPorPag"
        class="formSelectGradient"
        onchange="atualizarRegistrosPorPag('usuario')"
      >
        <option value="5">5</option>
        <option value="10" selected>10</option>
        <option value="20">20</option>
        <option value="50">50</option>
      </select>
    </div>
    <div
      class="table-responsive"
      style="max-height: 400px !important; overflow-y: scroll !important"
    >
      <table
        class="table table-striped table-bordered"
        style="margin-bottom: 0px !important"
      >
        <thead>
          <tr>
            <th>Nome</th>
            <th>Sobrenome</th>
            <th>Email</th>
            <th>Usuário</th>
            <th>Cargo</th>
            <th>Unidade</th>
            <th>Setor</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody class="table-group-divider">
          <!-- Os dados dos usuários serão preenchidos aqui -->
        </tbody>
      </table>
    </div>
    <nav aria-label="footer Navbar" class="footerNav">
      <ul class="pagination"></ul>
    </nav>
  </div>
</section>
