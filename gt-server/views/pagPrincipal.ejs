  <div class="d-flex justify-content-between">
    <!-- Sidebar fixo à esquerda com borda à direita e fundo branco -->
    <div id="sidebar" class="sidebar fixed-start bg-white p-3">
      <section>
        <div class="d-flex justify-content-between align-items-center">
          <img src="assets/img/GtLogo.jpg" alt="" class="fotoGt" width="200" />
          <div class="logout">
            <form action="/login/logout" method="GET">
              <a href="/login/logout" class="btn btn-danger"
                ><i class="bi bi-box-arrow-left"></i
              ></a>
            </form>
          </div>
        </div>
        <div id="jstree">
          <ul>
            <li>
              Cadastros
              <ul>
                <li id="child_node_1">
                  Empresa
                  <ul>
                    <li
                      data-jstree='{"icon":"bi bi-file-earmark-fill"}'
                      onclick="formUnidade()"
                    >
                      <u>Unidades</u>
                    </li>
                    <li
                      data-jstree='{"icon":"bi bi-file-earmark-fill"}'
                      onclick="formSetor()"
                    >
                      <u>Setores</u>
                    </li>
                    <li
                      data-jstree='{"icon":"bi bi-file-earmark-fill"}'
                      onclick="carregarTabela('Usuarios')"
                    >
                      <u>Usuários do ERP</u>
                    </li>
                    <li
                      data-jstree='{"icon":"bi bi-file-earmark-fill"}'
                      onclick="formUsuario()"
                    >
                      <u>Usuário</u>
                    </li>
                  </ul>
                </li>
                <li>
                  Atividades Laborais
                  <ul>
                    <li
                      data-jstree='{"icon":"bi bi-file-earmark-fill"}'
                      onclick="formExecucao()"
                    >
                      <u>Execuções</u>
                    </li>
                    <li
                      onclick="formAtvd()"
                      data-jstree='{"icon":"bi bi-file-earmark-fill"}'
                    >
                      <u>Atividades</u>
                    </li>
                  </ul>
                </li>
                <li>
                  Almoxarifado
                  <ul>
                    <li
                      data-jstree='{"icon":"bi bi-file-earmark-fill"}'
                      onclick="formSetor()"
                    >
                      <u>Grupo de produto</u>
                    </li>
                    <li
                      data-jstree='{"icon":"bi bi-file-earmark-fill"}'
                      onclick="formSetor()"
                    >
                      <u>Subgrupo de produto</u>
                    </li>
                    <li
                      data-jstree='{"icon":"bi bi-file-earmark-fill"}'
                      onclick="formGpProduto()"
                    >
                      <u>Produto</u>
                    </li>
                  </ul>
                </li>
              </ul>
            </li>
            <li>
              Estoque
              <ul>
                <li
                  data-jstree='{"icon":"bi bi-file-earmark-fill"}'
                  onclick="formEntradaProduto()"
                >
                  <u>Entrada de Produtos</u>
                </li>
                <li
                  data-jstree='{"icon":"bi bi-file-earmark-fill"}'
                  onclick="formBaixaProduto()"
                >
                  <u>Baixa de Produtos</u>
                </li>
              </ul>
            </li>
            <li>
              Dashboard
              <ul>
                <li data-jstree='{"icon":"bi bi-file-earmark-fill"}'>
                  <u>Estado de atividades por usuário</u>
                </li>
                <li data-jstree='{"icon":"bi bi-file-earmark-fill"}'>
                  <u>Estado de atividades por setor</u>
                </li>
                <li data-jstree='{"icon":"bi bi-file-earmark-fill"}'>
                  <u>Estado de status de atividades</u>
                </li>
              </ul>
            </li>
            <li>
              Relatórios
              <ul>
                <li data-jstree='{"icon":"bi bi-file-earmark-fill"}'>
                  <u>Atividades por Usuário</u>
                </li>
                <li data-jstree='{"icon":"bi bi-file-earmark-fill"}'>
                  <u>Atividades por Setor</u>
                </li>
                <li data-jstree='{"icon":"bi bi-file-earmark-fill"}'>
                  <u>Status de Atividades</u>
                </li>
                <li data-jstree='{"icon":"bi bi-file-earmark-fill"}'>
                  <u>Material Utilizado</u>
                </li>
              </ul>
            </li>
          </ul>
        </div>
      </section>
    </div>
    <!---->

    <div class="conteudo">
      <section id="forms">
        <div class="msgOForms">
          <%- include('includes/messages'); %> 
          <%- include('partials/setorForm') %>
          <div class="container">
            <div class="row">
              <div class="col-lg-2"></div>
              <div class="col-lg-8 my-3">
                <h1 class="text-center">Setores</h1>
                <p class="text-center lead">Gerencie seus setores abaixo.</p>
                <% if (setores.length > 0) { %>
                <div class="responsive-table">
                  <table class="table my-3">
                    <% setores.forEach(setor => { %>
                    <tr>
                      <td><%= setor.nome %></td>
                      <td><%= setor.descricao %></td>
                      <td><a href="/setor/edit/<%= setor._id %>">Editar</a></td>
                      <td>
                        <a
                          class="text-danger"
                          href="/setor/delete/<%= setor._id %>"
                          >Excluir</a
                        >
                      </td>
                    </tr>
                    <% }); %>
                  </table>
                </div>
                <% } else { %>
                <p class="text-center lead">Não existem setores cadastrados.</p>
                <% } %>
              </div>
              <div class="col-lg-2"></div>
            </div>
          </div>
        </div>
      </section>
    </div>
  </div>
