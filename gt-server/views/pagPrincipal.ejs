    <!-- Formulário de setores -->
    <div class="modal fade" id="setor" tabindex="-1" role="dialog">
      <div
        class="modal-dialog modal-lg"
        role="document"
        style="overflow-y: initial !important"
      >
        <div class="modal-content">
          <div class="modal-header">
            <div class="titleForm">
              <h1 class="text-center" id="tituloModal">Cadastrar Setor</h1>
              <p class="text-center lead" id="subTituloModal">
                Cadastre um novo setor abaixo
              </p>
            </div>
          </div>
          <div
            class="modal-body"
            style="max-height: calc(100vh - 200px); overflow-y: auto"
          >
            <form id="setorForm" onsubmit="return submitForm(event, 'setor')">
              <input type="hidden" id="grupoId" value="" />
              <div class="col mb-3">
                <div class="form-group">
                  <label>Nome</label>
                  <input
                    value="<%= setor.nome %>"
                    type="text"
                    class="form-control"
                    name="nome"
                    id="setorId"
                    required
                    maxlength="80"
                  />
                  <label>Descrição</label>
                  <textarea
                    class="form-control"
                    name="descricao"
                    id="setorDescricao"
                    maxlength="150"
                  >
                  <%= setor.descricao %></textarea
                  >
                </div>
              </div>
              <button type="submit" class="btn btn-success">
                <i class="fa fa-save"></i> Salvar
              </button>
              <button
                type="button"
                class="btn btn-warning"
                onclick="return botaoCancelarClick('setor')"
              >
                <i class="fa fa-close"></i> Cancelar
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>

